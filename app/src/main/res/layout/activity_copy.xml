<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="max.inspiringprints.Copy"
    android:background="@drawable/copy"
    android:padding="7dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Copy - услуги"
                android:id="@+id/textView"
                android:layout_weight="0.8"
                android:textColor="@android:color/white" />

            <Button
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/button3"
                android:onClick="Info8"
                android:background="@drawable/button" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Услуга:"
                android:id="@+id/textView4"
                android:textColor="@android:color/holo_red_light" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Печать на A-4"
                android:id="@+id/radioButton"
                android:onClick="Enablation" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Наличие покрытия:"
                android:id="@+id/textView3"
                android:textColor="@android:color/holo_red_light" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ламинация"
                android:id="@+id/checkBox" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#47000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Количество копий этого заказа:"
                android:id="@+id/textView2"
                android:textColor="@android:color/holo_red_light"
                android:layout_weight="0.25" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="20px"
                android:layout_weight="0.25" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:gravity="center">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/button4"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:onClick="Minus" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1"
                    android:id="@+id/quant"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="#50000000" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/button5"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:onClick="Plus" />

            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="20px"
                android:id="@+id/space"
                android:layout_weight="0.25" />

            RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 шт."
                android:id="@+id/radioButton"
                android:onClick="Radio_button" />

            RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 шт."
                android:id="@+id/radioButton1"
                android:onClick="Radio_button1" />

            RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000 шт."
                android:id="@+id/radioButton2"
                android:onClick="Radio_button2"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Сумма:"
                android:id="@+id/sum_out"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|right"
            android:layout_weight="0.1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посчитать"
                android:id="@+id/button"
                android:onClick="Count"
                android:enabled="false"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить заказ"
                android:id="@+id/button2"
                android:clickable="true"
                android:onClick="SendOrder"
                android:enabled="false"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
