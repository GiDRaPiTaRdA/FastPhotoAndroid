<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="max.inspiringprints.PoliGraf"
    android:background="@drawable/back1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:gravity="center">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center">

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:onClick="Vizitki"
                android:cropToPadding="false"
                android:background="@drawable/vizitka" />

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton4"
                android:onClick="Flaeru"
                android:background="@drawable/flyeru" />

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center">

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:focusableInTouchMode="false"
                android:background="@drawable/plakat"
                android:onClick="Plakatu" />

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton6"
                android:onClick="CopyPrint"
                android:background="@drawable/printer" />

            <Space
                android:layout_width="20px"
                android:layout_height="fill_parent"
                android:layout_weight="0.3" />
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3" />

    </LinearLayout>

</RelativeLayout>
